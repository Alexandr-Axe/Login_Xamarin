<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_Xamarin.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <!--<Image Source="xxx.xxx" Aspect="AspectFill" HeightRequest="200"/>-->
        <Picker x:Name="Titulko" Title="Vyber oslovení" Margin="20, 20, 20, 20">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Pan</x:String>
                    <x:String>Paní</x:String>
                    <x:String>Ing.</x:String>
                    <x:String>Prof.</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Entry x:Name="Username" Placeholder="Jméno" Margin="20, 20, 20, 20"/>
        <Entry x:Name="UPassword" Placeholder="Zadejte heslo" Margin="20, 20, 20, 20" IsPassword="true"/>
        <Button x:Name="varta" Clicked="varta_Clicked"/>
    </StackLayout>

</ContentPage>
